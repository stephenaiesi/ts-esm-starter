{
	"name": "ts-esm-starter",
	"private": true,
	"version": "0.1.0",
	"description": "Kickstart a modern typescript/esm library",
	"keywords": [],
	"author": "stephenaiesi@gmail.com",
	"license": "isc",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"ts-esm-starter": "./dist/cli/run.js"
	},
	"files": ["dist"],
	"scripts": {
		"clean": "rimraf ./dist",
		"format": "npx biome format src tests",
		"format:fix": "npm run format -- --write",
		"lint": "npx biome lint src tests",
		"lint:fix": "npm run lint -- --fix",
		"biome": "npx biome check src tests",
		"biome:fix": "npm run check -- --fix",
		"biome:ci": "npx biome ci src tests",
		"typecheck": "npx tsc -p ./src/tsconfig.json --noEmit",
		"attw": "npx attw --pack . --profile esm-only",
		"check": "npx concurrently npm:biome npm:typecheck npm:attw",
		"vitest": "npx vitest -c ./tests/vitest.config.ts --coverage",
		"test": "npm run vitest -- --run",
		"test:unit": "npm run test -- tests/**/*.spec.ts",
		"test:func": "npm run test -- tests/**/*.test.ts",
		"build:ts": "npx tsc -p src/tsconfig.json",
		"build:docs": "npx typedoc",
		"build": "npx concurrently 'npm:build:*'",
		"watch:ts": "npx tsc -p src/tsconfig.dev.json --watch",
		"watch:tests": "npm run vitest -- --watch --ui",
		"dev": "npm run clean && npx concurrently 'npm:watch:*'",
		"init": "scripts/init"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.17.3",
		"@biomejs/biome": "1.9.4",
		"@commitlint/cli": "^19.7.1",
		"@commitlint/config-conventional": "^19.7.1",
		"@types/node": "^22.13.1",
		"@vitest/coverage-v8": "^3.0.5",
		"@vitest/ui": "^3.0.5",
		"concurrently": "^9.1.2",
		"lefthook": "^1.10.10",
		"rimraf": "^6.0.1",
		"tslog": "^4.9.3",
		"typedoc": "^0.27.6",
		"typescript": "^5.7.3",
		"vitest": "^3.0.5"
	}
}
